{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "lib": [ "es2015" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "typeRoots": ["./src/custom_typings/index.ts"],                          /* List of root folders whose combined content represents the structure of the project at runtime. */
    "types": ["node","jest","@types/jest"],                           /* Type declaration files to be included in compilation. */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
  }
}
